{
  "name": "tps-global-context-menu",
  "version": "0.1.0",
  "private": true,
  "description": "Define a single reusable context menu for every note link across the vault.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=browser --format=cjs --outfile=build/main.js --external:obsidian --minify && node scripts/copy-files.js",
    "dev": "esbuild src/main.ts --bundle --platform=browser --format=cjs --outfile=build/main.js --external:obsidian --sourcemap --watch",
    "watch": "esbuild src/main.ts --bundle --platform=browser --format=cjs --outfile=build/main.js --external:obsidian --sourcemap --watch"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "tps",
    "context menu"
  ],
  "author": "Codex",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.19.3",
    "@types/node": "^20.11.2",
    "typescript": "^5.3.3"
  }
}
